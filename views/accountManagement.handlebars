<link rel="stylesheet" href="/css/accountManagement.css">

<div class="container-fluid">
    <div class="table-responsive">
        <table class="table table-striped table-hover text-center">
            <thead>
                <tr>
                    <th>AVATAR</th>
                    <th>HỌ TÊN</th>
                    <th>TRẠNG THÁI KHÓA</th>
                    <th>HÀNH ĐỘNG</th>
                </tr>
            </thead>
            <tbody>
                {{#each accounts}}
                    <tr>
                        <td><img src="/uploads/avatars/{{profilePicture}}"></td>
                        <td>{{fullname}}</td>
                        <td><button class="btn btn-success"><i class="fa-solid fa-lock-open"></i></button></td>
                        <td>
                            <button class="btn btn-primary"><i class="fa-solid fa-envelope-circle-check"></i></button> 
                            <button class="btn btn-secondary"><a href="/profile" style="color: white;"><i class="fa-solid fa-circle-info"></i></a></button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>