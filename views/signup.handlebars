<div class="container">
    <h2>Đăng ký</h2>
    <form method="POST" action="/signup">
        <div class="form-group">
            <label for="img">Chọn ảnh đại diện</label>
            <input type="file" class="form-control-file" id="img" name="img">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email" required>
        </div>
        <div class="form-group">
            <label for="name">Họ tên</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Nhập họ tên" required>
        </div>
        <div class="form-group form-inline">
            <label>Giới tính:</label>
            <div class="form-check mx-2">
                <input type="radio" class="form-check-input" id="male" name="gender" value="Nam">
                <label class="form-check-label" for="male">Nam</label>
            </div>
            <div class="form-check mx-2">
                <input type="radio" class="form-check-input" id="female" name="gender" value="Nữ">
                <label class="form-check-label" for="female">Nữ</label>
            </div>
            <div class="form-check mx-2">
                <input type="radio" class="form-check-input" id="other" name="gender" value="Khác">
                <label class="form-check-label" for="other">Khác</label>
            </div>
        </div>
        <div class="form-group">
            <label for="phone">Số điện thoại</label>
            <input type="tel" class="form-control" id="phone" name="phone" placeholder="Nhập số điện thoại" required>
        </div>
        <div class="form-group">
            <label for="account">Tài khoản</label>
            <input type="text" class="form-control" id="account" name="account" placeholder="Nhập tài khoản" required>
        </div>
        <div class="form-group">
            <label for="password">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu" required>
        </div>
        <div class="form-group">
            <label for="password-confirm">Nhập lại mật khẩu</label>
            <input type="password" class="form-control" id="password-confirm" name="password-confirm" placeholder="Nhập lại mật khẩu" required>
        </div>
        <button type="submit" class="btn btn-primary" id="signup">Đăng ký</button>
        <p>Bạn đã có tài khoản? <a href="/login">Đăng nhập</a></p>
    </form>

    {{#if message}}
        <div class="alert alert-success">{{message}}</div>
    {{/if}}

    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}
</div>

<script>
    setTimeout(function() {
        document.querySelectorAll('.alert-success, .alert-danger').forEach(function(element) {
            element.style.display = 'none';
        });
    }, 3000); // Thời gian 3 giây (3000 ms)
</script>