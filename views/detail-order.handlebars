<div class="container">
    <h2 id="title" class="text-success text-center"></h2>
    <table class="table text-center">
        <thead class="thead-dark">
            <tr>
                <th>Barcode</th>
                <th>Sản phẩm</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
        {{#each orderDetails}}
            <tr class="table-success">
                <th>{{barcode}}</th>
                <td>{{productName}}</td>
                <td>{{formatPrice price}}đ</td>
                <td>{{amount}}</td>
                <td>{{formatPrice totalPrice}}đ</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

<script src="/js/detail-order.js"></script>