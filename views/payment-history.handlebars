<form method="POST" action="/payment-history"></form>
    <div class="container">
        <div class="row">
            <h2>Quản lý lịch sử đơn hàng</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Tổng tiền</th>
                        <th>Số tiền đã trả</th>
                        <th>Số tiền được hoàn</th>
                        <th>Ngày mua</th>
                        <th>Số lượng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>$100.00</td>
                        <td>$120.00</td>
                        <td>$20.00</td>
                        <td>2023-10-11</td>
                        <td>5</td>
                        <td>
                            <button class="btn btn-danger"><a href="/detail-order" style="color: white; text-decoration: none;">Chi tiết</a></button>
                        </td>
                    </tr>
                    <!-- Thêm dữ liệu đơn hàng khác tại đây -->
                </tbody>
            </table>
        </div>
    </div>
</form>

<!-- Modal cập nhật -->
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateModalLabel">Cập nhật thông tin đơn hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Đặt các trường cập nhật ở đây -->
                <div class="form-group">
                    <label for="totalAmount">Tổng tiền:</label>
                    <input type="text" id="totalAmount" name="totalAmount" class="form-control">
                </div>
                <div class="form-group">
                    <label for="amountGiven">Số tiền đã trả:</label>
                    <input type="text" id="amountGiven" name="amountGiven" class="form-control">
                </div>
                <div class="form-group">
                    <label for="excessAmount">Số tiền được hoàn:</label>
                    <input type="text" id="excessAmount" name="excessAmount" class="form-control">
                </div>
                <div class="form-group">
                    <label for="dateOfPurchase">Ngày mua:</label>
                    <input type="date" id="dateOfPurchase" name="dateOfPurchase" class="form-control">
                </div>
                <div class="form-group">
                    <label for="productQuantity">Số lượng sản phẩm:</label>
                    <input type="text" id="productQuantity" name="productQuantity" class="form-control">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="saveChanges">Lưu cập nhật</button>
            </div>
        </div>
    </div>
</div>