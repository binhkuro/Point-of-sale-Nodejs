<div class="container-fluid">
    <h2 id="title" class="text-center text-success"></h2>
    <table class="table text-center">
        <thead class="thead-dark">
            <tr>
                <th>Mã đơn hàng</th>
                <th>Tổng tiền</th>
                <th>Số tiền đã trả</th>
                <th>Số tiền được hoàn</th>
                <th>Ngày mua</th>
                <th>Số lượng</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
                <tr class="table-success">
                    <td>{{this.orderId}}</td>
                    <td>{{formatPrice this.totalPrice}}đ</td>
                    <td>{{formatPrice this.priceGivenByCustomer}}đ</td>
                    <td>{{formatPrice this.excessPrice}}đ</td>
                    <td>{{this.dateOfPurchase}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>
                        <a href="/detail-order/{{this.orderId}}" style="text-decoration: none;">
                            <button class="btn btn-success">
                                <i class="fa-solid fa-circle-info" style="color: white;"></i>
                            </button>
                        </a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="row mt-3">
        <div class="col">
            {{#if totalPages}}
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item {{#if (eq currentPage 1)}}disabled{{/if}}">
                            <a class="page-link" href="?page=1"><<</a>
                        </li>
                        <li class="page-item {{#if (eq currentPage 1)}}disabled{{/if}}">
                            {{#if (eq currentPage 1)}}
                                <a class="page-link" href="#"><</a>
                            {{else}}
                                <a class="page-link" href="?page={{prevPage}}"><</a>
                            {{/if}}
                        </li>
                        {{#each pages}}
                            <li class="page-item {{#if (eq ../currentPage this)}}active{{/if}}">
                                <a class="page-link" href="?page={{this}}">{{this}}</a>
                            </li>
                        {{/each}}
                        <li class="page-item {{#if (eq currentPage totalPages)}}disabled{{/if}}">
                            {{#if (eq currentPage totalPages)}}
                                <a class="page-link" href="#">></a>
                            {{else}}
                                <a class="page-link" href="?page={{nextPage}}">></a>
                            {{/if}}
                        </li>
                         <li class="page-item {{#if (eq currentPage totalPages)}}disabled{{/if}}">
                            <a class="page-link" href="?page={{totalPages}}">>></a>
                        </li>
                    </ul>
                </nav>
            {{/if}}
        </div>
    </div>
</div>

<script src="/js/payment-history.js"></script>