<div class="container-fluid">
    <h2>Quản lý lịch sử đơn hàng</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Tổng tiền</th>
                <th>Số tiền đã trả</th>
                <th>Số tiền được hoàn</th>
                <th>Ngày mua</th>
                <th>Số lượng</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
                <tr>
                    <td>{{this.orderId}}</td>
                    <td>{{this.totalPrice}}</td>
                    <td>{{this.priceGivenByCustomer}}</td>
                    <td>{{this.excessPrice}}</td>
                    <td>{{this.dateOfPurchase}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>
                        <button class="btn btn-success">
                            <a href="/detail-order/{{this.orderId}}" style="color: white; text-decoration: none;">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                        </button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

