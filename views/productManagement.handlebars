                <label for="salePrice">Giá bán:</label>
                <input type="number" class="form-control" id="salePrice" name="salePrice" min="0">
            </div>

            <div class="form-group col-lg-4 col-md-6 col-12">
                <label for="creationDate">Ngày tạo:</label>
                <input type="date" class="form-control" id="creationDate" name="creationDate" value="2023-10-08">
            </div>
        </div>

        <input type="submit" class="btn btn-outline-success" id="add" value="Thêm">
        <input type="reset" class="btn btn-outline-secondary" id="reset" value="Hủy">
