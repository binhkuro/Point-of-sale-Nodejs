                    <input type="text" class="form-control" placeholder="VD: 91238129" id="updatedBarcode" name="updatedBarcode">
                </div>

                <div class="form-group col-md-6 col-12">
                    <label for="updatedName">Tên sản phẩm:</label>
                    <input type="text" class="form-control" placeholder="VD: Iphone 15" id="updatedName" name="updatedName">
                </div>

                <div class="form-group col-md-6 col-12">
                    <label for="updatedCatalog">Danh mục:</label>
                    <select name="updatedCatalog" class="custom-select" id="updatedCatalog">
                        <option selected value="Apple">Apple</option>
                        <option value="Samsung">Samsung</option>
                        <option value="Vivo">Vivo</option>
                        <option value="Xiaomi">Xiaomi</option>
                    </select>        
                </div>

                <div class="form-group col-md-6 col-12">
                    <label for="updatedImportPrice">Giá nhập:</label>
                    <input type="number" class="form-control" id="updatedImportPrice" name="updatedImportPrice" min="0">
                </div>

                <div class="form-group col-md-6 col-12">
                    <label for="updatedSalePrice">Giá bán:</label>
                    <input type="number" class="form-control" id="updatedSalePrice" name="updatedSalePrice" min="0">
                </div>

                <div class="form-group col-md-6 col-12">
                    <label for="updatedCreationDate">Ngày tạo:</label>
                    <input type="date" class="form-control" id="updatedCreationDate" name="updatedCreationDate" value="2023-10-08">
