<div class="container-fluid">
    <form action="#" method="post">
        <div class="row">
            <div class="form-group col-lg-4 col-md-6 col-12">
                <label for="barcode">Barcode:</label>
                <input type="text" class="form-control" placeholder="VD: 91238129" id="barcode" name="barcode">
            </div>

            <div class="form-group col-lg-4 col-md-6 col-12">
                <label for="name">Tên sản phẩm:</label>
                <input type="text" class="form-control" placeholder="VD: Iphone 15" id="name" name="name">
            </div>

            <div class="form-group col-lg-4 col-md-6 col-12">
                <label for="catalog">Danh mục:</label>
                <select name="catalog" class="custom-select" id="catalog">
                    <option selected value="Apple">Apple</option>
                    <option value="Samsung">Samsung</option>
                    <option value="Vivo">Vivo</option>
                    <option value="Xiaomi">Xiaomi</option>
