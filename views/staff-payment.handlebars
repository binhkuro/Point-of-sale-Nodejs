<form method="POST" action="/staff-payment">
    <div class="container">
        <h2>Quản lý khách hàng</h2>
        <div class="row">
            <div class="col-md-8">
                <!-- Số điện thoại -->
                <div class="form-group">
                    <label for="phone">Số điện thoại:</label>
                    <input type="text" id="phone" name="phone" class="form-control" value="{{ phone }}" readonly>
                </div>
                <!-- Email -->
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="text" id="email" name="email" class="form-control" value="{{ email }}" readonly>
                </div>
                <!-- Tên người dùng -->
                <div class="form-group">
                    <label for "username">Tên người dùng:</label>
                    <input type="text" id="username" name="username" class="form-control" value="{{ username }}" readonly>
                </div>
                <!-- Giới tính -->
                <div class="form-group form-inline">
                    <label>Giới tính:</label>
                    <div class="form-check mx-2">
                        <input type="radio" class="form-check-input" id="male" name="gender" value="Nam" disabled>
                        <label class="form-check-label" for="male">Nam</label>
                    </div>
                    <div class="form-check mx-2">
                        <input type="radio" class="form-check-input" id="female" name="gender" value="Nữ" disabled>
                        <label class="form-check-label" for="female">Nữ</label>
                    </div>
                    <div class="form-check mx-2">
                        <input type="radio" class="form-check-input" id="other" name="gender" value="Khác" disabled>
                        <label class="form-check-label" for="other">Khác</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="img">Chọn ảnh đại diện</label>
                    <input type="file" class="form-control-file" id="img" name="img">
                </div>
                <!-- Button "Thêm" -->
                <button class="btn btn-warning" id="payment" type="button">Thêm</button>
            </div>
            <div class="col-md-4">
                <div class="col-md-4">
                    <!-- Avatar -->
                    <img src="{{ avatarURL }}" alt="Avatar" class="img-fluid rounded-circle">
                </div>
            </div>
            <div class="row">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ và tên</th>
                            <th>Email</th>
                            <th>Giới tính</th>
                            <th>Số điện thoại</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>2</td>
                            <td>Trần Thị B</td>
                            <td>tran.thi.b@example.com</td>
                            <td>Nữ</td>
                            <td>0987654321</td>
                            <td>
                                <button class="btn btn-warning" data-toggle="modal" data-target="#updateModal">Cập nhật</button>
                                <button class="btn btn-danger">Xóa</button>
                                <button class="btn btn-danger"><a href="/payment-history" style="color: white; text-decoration: none;">Xem lịch sử mua hàng</a></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>    
        </div>

        
    </div>
</form>

<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateModalLabel">Cập nhật thông tin khách hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Thêm các trường cập nhật thông tin ở đây -->
                <div class="form-group">
                    <label for="updateName">Họ và tên:</label>
                    <input type="text" id="updateName" name="updateName" class="form-control">
                </div>
                <div class="form-group">
                    <label for="updateEmail">Email:</label>
                    <input type="text" id="updateEmail" name="updateEmail" class="form-control">
                </div>
                <div class="form-group"> <!-- Sửa đoạn này -->
                    <label for="updateGender">Giới tính:</label>
                    <select id="updateGender" name="updateGender" class="form-control">
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="updatePhone">Số điện thoại:</label>
                    <input type="text" id="updatePhone" name="updatePhone" class="form-control">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="updateCustomerButton">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>
