<form method="POST" action="/payment">
    <div class="container">
        <h2>Thanh toán của khách hàng</h2>

        <div class="search-container">
            <input type="text" placeholder="Tìm kiếm..." name="search">
            <button type="submit"><i class="fas fa-search"></i></button>
        </div>

        <div class="form-group">
            <label for="barcode">Barcode:</label>
            <div class="input-group">
                <input value="{{barcode}}" type="text" class="form-control" placeholder="VD: 91238129" id="barcode" name="barcode">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary"><i class="fas fa-plus"></i></button>
                </div>
            </div>
        </div>
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Tổng tiền</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{productName}}</td>
                    <td>{{quantity}}</td>
                    <td>{{unitPrice}}</td>
                    <td>{{totalPrice}}</td>
                    <td>
                        <button class="btn btn-danger">
                            <a href="/detail-order" style="color: white; text-decoration: none;">Chi tiết</a>
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</form>
