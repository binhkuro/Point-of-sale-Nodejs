<div class="container">
    <h2>Thông tin cá nhân</h2>
    <div class="row">
        <div class="col-md-4">
            <!-- Avatar -->
            <img src="/uploads/avatars/{{profilePicture}}" alt="Avatar" class="img-fluid rounded-circle">
        </div>
        <div class="col-md-8">
            <!-- Email -->
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" value="{{email}}" readonly>
            </div>
            <!-- Tên người dùng -->
            <div class="form-group">
                <label for="fullname">Họ và tên:</label>
                <input type="text" id="fullname" name="fullname" class="form-control" value="{{fullname}}" readonly>
            </div>

            <a href="#">Đổi mật khẩu</a>
        </div>
    </div>
</div> 
 
<script>
    $(document).ready(function () {
        // Xử lý hiển thị hoặc ẩn mật khẩu
        $('#showPasswordBtn').on('click', function () {
            var passwordInput = $('#password');
            var icon = $(this).find('i');

            if (passwordInput.attr('type') === 'password') {
                passwordInput.attr('type', 'text');
                icon.removeClass('fa-eye');
                icon.addClass('fa-eye-slash');
            } else {
                passwordInput.attr('type', 'password');
                icon.removeClass('fa-eye-slash');
                icon.addClass('fa-eye');
            }
        });
    });
</script>